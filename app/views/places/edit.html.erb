<%= form_for @place, remote: true, format: :json, html: { class: "update", role: "form" } do |f| %>
  <div class="form-group form-group-sm">
    <%= f.label :name, class: "small" %>
    <%= f.text_field :name, class: "form-control input-sm" %>
  </div>
  <div class="form-group form-group-sm">
    <%= f.label :latitude, class: "small" %>
    <%= f.text_field :latitude, class: "form-control input-sm" %>
  </div>
  <div class="form-group form-group-sm">
    <%= f.label :longitude, class: "small" %>
    <%= f.text_field :longitude, class: "form-control input-sm" %>
  </div>
  <div class="form-group form-group-sm">
    <%= f.label :elevation, class: "small" %>
    <%= f.text_field :elevation, class: "form-control input-sm" %>
  </div>
  <div class="form-group form-group-sm">
    <%= f.label :description, class: "small" %>
    <%= f.text_area :description, class: "form-control input-sm", row: 3 %>
  </div>
  <%= f.button class: "btn btn-default" do %>
  <span class="glyphicon glyphicon-save"></span>
  <% end %>
<% end %>

<%= javascript_tag do %>
  $(document).on("succeed.ajaxForm", "#edit_place_<%= @place.id %>", function() {
    location.href="<% place_path(@place) %>";
  });
<% end %>
