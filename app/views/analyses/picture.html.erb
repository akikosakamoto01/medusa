<div class="spot-viewer">
  <%= hidden_field_tag nil, @analysis.global_id, class: "target-uid" %>
  <%= content_tag :svg, nil, class: "spot-canvas", width: 300, height: 300 %>
  <% @analysis.attachment_image_files.each_slice(4) do |files| %>
  <div class="row spot-thumbnails">
    <% files.each do |file| %>
    <div class="col-lg-3">
      <%= link_to attachment_file_path(file, format: :svg), remote: true, class: "thumbnail" do %>
      <%= image_tag file.path %>
      <% end %>
    </div>
    <% end %>
  </div>
  <% end %>
</div>

<%= javascript_tag do %>
  $("div.spot-viewer").spotViewer();
<% end %>
