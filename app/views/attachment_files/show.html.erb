<div class="row">
  <div id="show-caption" class="col-lg-12">
    <%= @attachment_file.name_with_id %>
  </div>
</div>
<div class="row">
  <div id="show-tools" class="col-lg-4">
    <div class="row btn-toolbar tool-selector" role="toolbar">
      <div class="btn-group btn-group-sm">
        <%= link_to picture_attachment_file_path(@attachment_file), class: "btn btn-default activate", remote: true do %>
          <span class="glyphicon glyphicon-picture"></span>
        <% end %>
      </div>
      <% if can? :update, @attachment_file %>
      <div class="btn-group btn-group-sm">
        <%= link_to edit_attachment_file_path(@attachment_file), class: "btn btn-default", remote: true do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
        <%= link_to property_attachment_file_path(@attachment_file), class: "btn btn-default", remote: true do %>
          <span class="glyphicon glyphicon-cog"></span>
        <% end %>
      </div>
      <% end %>
      <div class="btn-group btn-group-sm">
        <%= link_to @attachment_file.path, class: "btn btn-default " do %>
          <span class="glyphicon glyphicon-picture"></span>
        <% end %>
        <%= link_to download_attachment_file_path(@attachment_file), class: "btn btn-default" do %>
          <span class="glyphicon glyphicon-file"></span>
        <% end %>
      </div>
    </div>
    <img>
    <div class="row tool-content">
    </div>
  </div>

  <div id="show-body" class="col-lg-8">
    <!-- Nav tabs -->
    <ul class="nav nav-tabs">
      <li class="<%= active_if_current('at-a-glance') %>">
        <a href="#at-a-glance" data-toggle="tab">at-a-glance</a>
      </li>
      <li class="<%= active_if_current('stone') %>">
        <a href="#stone" data-toggle="tab"><%= @alias_specimen + data_count(@attachment_file.stones) %></a>
      </li>
      <li class="<%= active_if_current('box') %>">
        <a href="#box" data-toggle="tab"><%= "box#{data_count(@attachment_file.boxes)}" %></a>
      </li>
      <li class="<%= active_if_current('place') %>">
        <a href="#place" data-toggle="tab"><%= "place#{data_count(@attachment_file.places)}" %></a>
      </li>
      <li class="<%= active_if_current('analysis') %>">
        <a href="#analysis" data-toggle="tab"><%= "analysis#{data_count(@attachment_file.analyses)}" %></a>
      </li>
      <li class="<%= active_if_current('bib') %>">
        <a href="#bib" data-toggle="tab"><%= "bib#{data_count(@attachment_file.bibs)}" %></a>
      </li>
      <li class="<%= active_if_current('spot') %>">
        <a href="#spot" data-toggle="tab"><%= "spot#{data_count(@attachment_file.spots)}" %></a>
      </li>
    </ul>

    <!-- Tab panes -->
    <% tab_info = [
        ["at-a-glance",nil],
        ["stone",@attachment_file.stones],
        ["box",@attachment_file.boxes],
        ["place",@attachment_file.places],
        ["analysis",@attachment_file.analyses],
        ["bib",@attachment_file.bibs],
        ["spot",@attachment_file.spots]
    ] %>
    <div class="tab-content">
      <% tab_info.each do |key,array| %>
        <div class="tab-pane<%= active_if_current(key) %>" id="<%= key %>"><%= render partial: key.underscore %></div>
      <% end %>
    </div>
  </div>
</div>
