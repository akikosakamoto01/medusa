<div class="row">
  <div id="show-caption" class="col-lg-12">
    <%= @stone.name_with_id %>
  </div>
</div>
<div class="row">
  <div id="show-tools" class="col-lg-4">
    <div class="row btn-toolbar tool-selector" role="toolbar">
      <div class="btn-group btn-group-sm">
        <%= link_to family_stone_path(@stone), class: "btn btn-default activate", id: "tree-conifer-button", remote: true do %>
          <span class="glyphicon glyphicon-tree-conifer"></span>
        <% end %>
        <% if @stone.has_image? %>
          <%= link_to picture_stone_path(@stone), class: "btn btn-default", id: "picture-button", remote: true do %>
            <span class="glyphicon glyphicon-picture"></span>
          <% end %>
        <% end %>
        <%= link_to map_stone_path(@stone), class: "btn btn-default", id: "globe-button", remote: true do %>
          <span class="glyphicon glyphicon-globe"></span>
        <% end %>
      </div>
      <% if can? :update, @stone %>
      <div class="btn-group btn-group-sm">
        <%= link_to edit_stone_path(@stone), class: "btn btn-default", id: "pencil-button", remote: true do %>
          <span class="glyphicon glyphicon-pencil"></span>
        <% end %>
        <%= link_to property_stone_path(@stone), class: "btn btn-default", id: "cog-button", remote: true do %>
          <span class="glyphicon glyphicon-cog"></span>
        <% end %>
      </div>
      <% end %>
      <div class="btn-group btn-group-sm">
        <%= link_to download_label_stone_path(@stone), class: "btn btn-default", id: "tag-button" do %>
          <span class="glyphicon glyphicon-tag"></span>
        <% end %>
        <%= link_to download_card_stone_path(@stone), class: "btn btn-default", id: "file-button" do %>
          <span class="glyphicon glyphicon-file"></span>
        <% end %>
      </div>
    </div>
    <img>
    <div class="row tool-content">
    </div>
  </div>
  <div id="show-body" class="col-lg-8">
    <%= @stone.path %>
    <% tab_info = [
        ["at-a-glance",nil],
        ["daughter",@stone.children],
        ["histories", @stone.paths],
        ["analysis",@stone.analyses],
        ["bib",@stone.bibs],
        ["file",@stone.attachment_files]] %>
    <!-- Nav tabs -->
    <ul class="nav nav-tabs">
      <% tab_info.each do |key,array| %>
       <li class="<%= active_if_current(key) %>" ><a href="#<%= key %>" data-toggle="tab"><%= key + data_count(array) %></a></li>
      <% end %>

    </ul>
    <!-- Tab panes -->
    <div class="tab-content">
      <% tab_info.each do |key,array| %>
        <div class="tab-pane<%= active_if_current(key) %>" id="<%= key %>"><%= render partial: key.underscore %></div>
      <% end %>
    </div>
  </div>
</div>
