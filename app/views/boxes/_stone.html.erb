<div class="display-type">
  <div id="display-type-html">
    <table class="table table-condensed table-striped">
      <thead>
        <tr>
          <th></th>
          <th>name</th>
          <th>physical form</th>
          <th>quantity</th>
          <th>unit</th>
          <th></th>
          <th>global-id</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <%= form_tag bundle_edit_stones_path, id: "stone-bundle-form" do %>
          <% @box.stones.each do |stone| %>
            <tr>
              <td>
                <%= check_box_tag("ids[]", stone.id, false, {id: "ids_#{stone.id}", class: "select-row"}) if can?(:update, stone) %>
              </td>
              <td><%= link_to_if can?(:read, stone), stone.name,stone %></td>
              <td><%= stone.physical_form.try!(:name) %></td>
              <td><%= stone.try!(:quantity) %></td>
              <td><%= stone.try!(:quantity_unit) %></td>
              <td></td>
              <td><%= stone.try!(:global_id) %></td>
              <td>
                <%= link_to box_stone_path(@box, stone) + tab_param(__FILE__), method: :delete, title: "unlink stone", data: {confirm: t("confirm.unlink")} do %>
                  <span class="glyphicon glyphicon-remove"></span>
                <% end %>
              </td>
            </tr>
          <% end %>
        <% end %>
      </tbody>
      <tfoot>
        <tr>
          <%= form_for Stone.new, url: box_stones_path(@box) do |f|%>
            <%= hidden_tabname_tag(__FILE__) %>
            <th><%= check_box_tag nil, nil, false, class: "select-row-all" %></th>
            <th><%= f.text_field :name, class: "form-control input-sm" %></th>
            <th><%= f.select :physical_form_id, PhysicalForm.pluck(:name, :id), { include_blank: true }, class: "form-control input-sm" %></th>
            <th><%= f.text_field :quantity, class: "form-control input-sm" %></th>
            <th><%= f.text_field :quantity_unit, class: "form-control input-sm" %></th>
            <th>
              <%= f.button title:"add stone file", class: "btn btn-default" do %>
                <span class="glyphicon glyphicon-save"></span>
              <% end %>
            </th>
          <% end %>
          <%= form_tag link_by_global_id_box_stones_path(@box),method: :post do %>
            <%= hidden_tabname_tag(__FILE__) %>
            <th>
	      <div class="input-group">
		<%= text_field_tag :global_id, nil, id: "stone-global-id", class: "form-control input-sm" %>
		<span class="input-group-addon">
		  <%= link_to stones_path(per_page: 10, format: :modal), "data-toggle" => "modal", "data-target" => "#search-modal", "data-input" => "#stone-global-id" do %>
		  <span class="glyphicon glyphicon-search"></span>
		  <% end %>
		</span>
	      </div>
	    </th>
            <th>
              <%= button_tag title: "link stone by global id", class: "btn btn-default" do %>
                <span class="glyphicon glyphicon-save"></span>
              <% end %>
            </th>
          <% end %>
        </tr>
      </tfoot>
    </table>
    <%= link_to_function "edit", "$('#stone-bundle-form').submit();", class: "btn btn-default" %>
  </div>
  <div class="hidden" id="display-type-tex">
    <pre><code><%= @box.to_tex(@alias_specimen) %></code></pre>
  </div>
</div>
<div class="btn-group">
  <a href="#display-type-html" class="btn radio-button-group">html</a>
  <a href="#display-type-tex" class="btn radio-button-group">tex</a>
</div>
